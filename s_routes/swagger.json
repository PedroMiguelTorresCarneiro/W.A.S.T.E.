{
    "openapi": "3.0.0",
    "info": {
      "title": "Routes Service API",
      "version": "1.0.0",
      "description": "API para cálculo e gestão de rotas, incluindo filtragem por data e remoção."
    },
    "servers": [
      {
        "url": "http://localhost:5002",
        "description": "Servidor Local"
      }
    ],
    "paths": {
      "/v1/routes/calculate": {
        "post": {
          "summary": "Calcula uma nova rota",
          "description": "Recebe coordenadas e modo de transporte para calcular uma rota.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "coordinates": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "items": { "type": "number" }
                      },
                      "example": [[40.7128, -74.0060], [34.0522, -118.2437]]
                    },
                    "mode": {
                      "type": "string",
                      "enum": ["car", "walking"],
                      "example": "car"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Rota criada com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "route_id": { "type": "string", "example": "r123" },
                      "distance_km": { "type": "number", "example": 15.2 },
                      "fuel_liters": { "type": "number", "example": 2.5 },
                      "created_at": { "type": "string", "example": "2025-03-05" }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Erro no pedido",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string", "example": "Missing required fields: coordinates and mode" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/v1/routes": {
        "get": {
          "summary": "Obtém detalhes de uma rota específica",
          "description": "Retorna informações detalhadas de uma rota com base no ID.",
          "parameters": [
            {
              "name": "id",
              "in": "query",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
              "description": "Detalhes da rota",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "route_id": { "type": "string", "example": "r123" },
                      "distance_km": { "type": "number", "example": 15.2 },
                      "fuel_liters": { "type": "number", "example": 2.5 },
                      "created_at": { "type": "string", "example": "2025-03-05" }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Erro no pedido",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string", "example": "Missing route ID" }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Rota não encontrada",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string", "example": "Route not found" }
                    }
                  }
                }
              }
            }
          }
        },
        "delete": {
          "summary": "Remove uma rota guardada",
          "description": "Remove uma rota com base no ID fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "query",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
              "description": "Rota removida com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Route deleted successfully" }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Erro no pedido",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string", "example": "Missing route ID" }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Rota não encontrada",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string", "example": "Route not found" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/v1/routes/history": {
        "get": {
          "summary": "Lista todas as rotas guardadas com filtros opcionais",
          "description": "Permite filtrar rotas por dia, mês ou ID do camião.",
          "parameters": [
            {
              "name": "day",
              "in": "query",
              "schema": { "type": "string" }
            },
            {
              "name": "month",
              "in": "query",
              "schema": { "type": "string" }
            },
            {
              "name": "truck_id",
              "in": "query",
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
              "description": "Lista de rotas",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "route_id": { "type": "string", "example": "r123" },
                        "distance_km": { "type": "number", "example": 15.2 },
                        "fuel_liters": { "type": "number", "example": 2.5 }
                      }
                    }
                  }
                }
              }
            },
            "404": {
            "description": "Nenhuma rota encontrada para os filtros fornecidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string", "example": "No routes found for the given filters" }
                  }
                }
              }
            }
           }
          }
        }
      }
    }
  }
  